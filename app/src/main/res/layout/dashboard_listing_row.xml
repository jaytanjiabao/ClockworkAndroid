<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@color/grey">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <!-- Job Title -->
            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="JOB TITLE"
                android:textColor="@color/pink"
                android:typeface="sans"
                android:textSize="15dip"
                android:textStyle="bold"/>

            <!-- Hiring Company -->
            <TextView
                android:id="@+id/hiringCo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#343434"
                android:textSize="10dip"
                android:text="HIRING COMPANY"
                android:layout_below="@+id/jobTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!-- Hiring Company -->
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#343434"
                android:textSize="10dip"
                android:text="APPLICATION STATUS"
                android:layout_below="@+id/hiringCo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!-- Start Date -->

            <!-- Location Text -->

            <!-- Salary -->
            <TextView
                android:id="@+id/salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="right"
                android:text="$10"
                android:layout_marginRight="5dp"
                android:textSize="25dp"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:layout_above="@+id/status"
                android:layout_toStartOf="@+id/popup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:gravity="right"
                android:textSize="10dp"
                android:textColor="@color/pink"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="per hour"
                android:id="@+id/textView2"
                android:layout_alignBottom="@+id/status"
                android:layout_alignEnd="@+id/salary" />

            <ImageButton
                android:src="@drawable/vert_dots"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/popup"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>