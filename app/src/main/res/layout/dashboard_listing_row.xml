<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@color/grey">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp">

            <!-- Job Title -->
            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="JOB TITLE"
                android:textColor="@color/pink"
                android:typeface="sans"
                android:textSize="20dip"
                android:textStyle="bold"/>

            <!-- Hiring Company -->
            <TextView
                android:id="@+id/hiringCo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#343434"
                android:textSize="15dip"
                android:text="HIRING COMPANY"
                android:layout_below="@+id/jobTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!-- Start Date -->

            <!-- Location Text -->

            <!-- Salary -->
            <TextView
                android:id="@+id/salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="$10"
                android:layout_marginRight="5dp"
                android:textSize="35dp"
                android:textColor="@color/pink"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textSize="15dp"
                android:textColor="@color/pink"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="per hour"
                android:id="@+id/textView2"
                android:layout_below="@+id/salary"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Withdraw Job Application"
                android:id="@+id/actionButton"
                android:layout_below="@+id/textView2"
                android:layout_alignParentEnd="true"
                android:background="@drawable/dashboard_button"
                android:gravity="center" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>